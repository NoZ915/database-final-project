<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="/css/form.css">
  </head>

  <body>
    <%- include('../includes/navigation.ejs', { isAuthenticated: isAuthenticated }) %>
      <main>
        <form class="system-form" action="/signup" method="POST">
          <div class="form-control">
            <label for="email">電子信箱</label>
            <input type="email" name="email" id="email">
          </div>
          <div class="form-control">
            <label for="password">密碼</label>
            <input type="password" name="password" id="password">
          </div>
          <div class="form-control">
            <label for="name">姓名</label>
            <input type="text" name="name" id="name">
          </div>
          <div class="form-control">
            <label for="nickname">暱稱</label>
            <input type="text" name="nickname" id="nickname">
          </div>
          <div class="form-control">
            <label for="residence">居住地</label>
            <input type="text" name="residence" id="residence">
          </div>
          <div class="form-control">
            <label for="avatar">頭貼</label>
            <input type="text" name="avatar" id="avatar">
          </div>
          <div class="btn__container">
            <button class="btn" type="submit">註冊</button>
          </div>

        </form>
      </main>
      <%- include('../includes/footer.ejs') %>
  </body>

  </html>